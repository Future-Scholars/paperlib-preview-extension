{
  "name": "@future-scholars/paperlib-preview-extension",
  "version": "0.0.2",
  "description": "This extension is for Windows and Linux users to preview a paper in Paperlib",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "npm run build-ext && npm run build-view",
    "build-ext": "tsc --noEmit --p ./ext/tsconfig.json && vite build --config ./ext/vite.config.ts",
    "build-view": "vue-tsc --noEmit --p ./view/tsconfig.json && vite build --config ./view/vite.config.ts"
  },
  "engines": {
    "node": ">=16.17.1"
  },
  "devDependencies": {
    "@future-scholars/vite-plugin-electron-renderer": "^0.14.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@types/node": "^20.10.5",
    "@vitejs/plugin-vue": "^4.6.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.2",
    "paperlib-api": "^0.0.9",
    "pdfjs-dist": "^4.0.269",
    "prettier": "^3.1.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "rollup-plugin-hypothetical": "^2.1.1",
    "rollup-plugin-ignore": "^1.0.10",
    "rollup-plugin-modify": "^3.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "4.3.7",
    "vitest": "0.24.3",
    "vue": "^3.3.13",
    "vue-tsc": "^1.8.27"
  },
  "debug": {
    "env": {
      "VITE_DEV_SERVER_HOSTNAME": "127.0.0.1",
      "VITE_DEV_SERVER_PORT": 3344,
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344"
    }
  },
  "keywords": [
    "paperlib"
  ]
}